@model IEnumerable<ChessMates.Models.News>

@{List<ChessMates.Models.News> list = Model.ToList(); }
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 760px; height: 400px;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src=@list[0].ImageUrl style="width: 760px; max-height: 400px">
            <div class="carousel-caption">
                <h3>@list[0].Title</h3>
            </div>
        </div>

        <div class="item">
            <img src=@list[1].ImageUrl style="width: 760px; max-height: 400px">
            <div class="carousel-caption">
                <h3>@list[1].Title</h3>
            </div>
        </div>

        <div class="item">
            <img src=@list[2].ImageUrl style="width: 760px; max-height: 400px">
            <div class="carousel-caption">
                <h3>@list[2].Title</h3>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>