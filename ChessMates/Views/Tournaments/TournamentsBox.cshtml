@model IEnumerable<ChessMates.Models.Tournament>

<div class="container bg-primary" style="max-width:20rem; color: white; border-radius: 6px; margin-top: 5rem">
    <h4 style="text-align: center">Tournaments</h4><hr />
    @foreach (var item in Model)
    {
        <div class="well-sm">
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </div>
    }
</div>